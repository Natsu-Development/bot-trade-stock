# Trading Bot Production Configuration
# This file contains all non-sensitive configuration values
# Secrets are stored separately in .env.secrets (created during deployment)

# Docker Registry
DOCKER_REGISTRY=docker.io
DOCKER_NAMESPACE=iamzion

# System
NODE_ENV=production

# Server
GRPC_SERVER_ADDR=broker:50051
HTTP_PORT=8080

# HTTP Timeouts (seconds)
HTTP_READ_TIMEOUT=30
HTTP_WRITE_TIMEOUT=30
HTTP_IDLE_TIMEOUT=60
HTTP_SHUTDOWN_TIMEOUT=10

# gRPC Timeouts (seconds)
GRPC_CONNECTION_TIMEOUT=5
GRPC_REQUEST_TIMEOUT=10
GRPC_MARKET_DATA_TIMEOUT=10

# MongoDB
MONGODB_DATABASE=bot_trade

# Bearish Cron Configuration
BEARISH_CRON_AUTO_START=true
BEARISH_30M_ENABLED=false
BEARISH_30M_SCHEDULE=5,35 * * * *
BEARISH_1H_ENABLED=true
BEARISH_1H_SCHEDULE=0 */1 * * 1-5
BEARISH_1D_ENABLED=true
BEARISH_1D_SCHEDULE=0 15 * * 1-5
BEARISH_1W_ENABLED=true
BEARISH_1W_SCHEDULE=0 9 * * 1

# Bullish Cron Configuration
BULLISH_CRON_AUTO_START=true
BULLISH_30M_ENABLED=false
BULLISH_30M_SCHEDULE=10,40 * * * *
BULLISH_1H_ENABLED=true
BULLISH_1H_SCHEDULE=0 */1 * * 1-5
BULLISH_1D_ENABLED=true
BULLISH_1D_SCHEDULE=0 13 * * 1-5
BULLISH_1W_ENABLED=false
BULLISH_1W_SCHEDULE=0 10 * * 1

# Logging
LOG_LEVEL=info